@model ShoppingCart.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <h2 class="text-center mb-4">@Model.ProductName</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/@Model.ProductImage" class="img-fluid" alt="Product Image" style="max-height: 400px; object-fit: cover;" />
        </div>
        <div class="col-md-6">
            <h3>@Model.ProductName</h3>
            <p><strong>PricePerQnt:</strong> @Model.PricePerQnt.ToString("C")</p>
            <p><strong>Description:</strong></p>
            <p>@Model.Description</p>
             <!-- Button to add product to cart -->
            <form asp-action="AddToCart" method="post">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                <a class="text-link" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.ProductId">Add to Cart</a>
            </form>

            <a href="@Url.Action("Product", "Home")" class="btn btn-primary">Back to Product List</a>
        </div>
    </div>
</div>
